<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardTitleStyle">
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:layout_marginBottom">@dimen/low_margin</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_margin">@dimen/normal_margin</item>
    </style>

    <style name="TextLayoutStyle">
        <item name="android:layout_margin">@dimen/low_margin</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_margin">@dimen/low_margin</item>
        <item name="backgroundTint">@color/md_grey_700</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="CenterLink">
        <item name="android:textColor">@color/md_blue_700</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CardNumberStyle">
        <item name="android:textSize">@dimen/bank_card_number</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:text">@string/sample_card_number</item>

    </style>


</resources>