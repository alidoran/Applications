<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="movie_grp_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_marginStart">@dimen/high_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">@dimen/max_txt_length</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="movie_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">@dimen/max_txt_length</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>