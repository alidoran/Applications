<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_blue_grey_800">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_grp_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/sample_group"
        style="@style/movie_grp_title"
        />

    <com.google.android.material.textview.MaterialTextView
        app:layout_constraintStart_toEndOf="@id/txt_grp_title"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/greater_than"
        android:layout_marginStart="16dp"
        style="@style/movie_grp_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_grp_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>